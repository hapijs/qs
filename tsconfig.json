{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "noEmit": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true
  },
  "include": ["lib", "test"]
}
